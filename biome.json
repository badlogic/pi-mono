{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useConst": "error",
				"useNodejsImportProtocol": "off",
				"useTemplate": "off"
			},
			"correctness": {
				"noUnusedVariables": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noControlCharactersInRegex": "off",
				"noEmptyInterface": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 3,
		"lineWidth": 120
	},
	"files": {
		"includes": [
			"packages/*/src/**/*",
			"packages/*/test/**/*",
			"*.json",
			"*.md",
			"!**/node_modules/**/*",
			"!**/test-sessions.ts"
		],
		"experimentalScannerIgnores": ["node_modules"]
	}
}
