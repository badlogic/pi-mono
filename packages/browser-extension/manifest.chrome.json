{
  "manifest_version": 3,
  "name": "pi-ai",
  "description": "Use @mariozechner/pi-ai to summarize and highlight the page you are reading.",
  "version": "0.5.43",
  "action": {
    "default_title": "Click to open side panel"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ]
}